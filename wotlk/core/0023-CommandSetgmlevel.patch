index 8feab1c..d287686 100644
--- a/src/server/scripts/Commands/cs_account.cpp
+++ b/src/server/scripts/Commands/cs_account.cpp
@@ -413,10 +413,9 @@ public:
         uint32 gm = 0;
         char* arg1 = strtok((char*)args, " ");
         char* arg2 = strtok(NULL, " ");
