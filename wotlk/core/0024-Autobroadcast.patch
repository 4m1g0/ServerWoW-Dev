+DROP TABLE IF EXISTS `autobroadcast_names`;
+
+CREATE TABLE `autobroadcast_names` (
+  `id` int(11) NOT NULL AUTO_INCREMENT,
+  `name` varchar(20) NOT NULL,
+  PRIMARY KEY (`id`)
+) ENGINE=MyISAM AUTO_INCREMENT=3 DEFAULT CHARSET=utf8;
